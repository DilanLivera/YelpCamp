<!-- add header page -->
<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center">Create a New Campground</h1>
        <div style = "width: 30%; margin: auto;">
            <!-- from to get new camground data -->
            <form action = "/campgrounds/<%= campground._id %>/?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "campground[name]" placeholder = "name" value = "<%= campground.name %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "campground[image]" placeholder = "image url" value = "<%= campground.image %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "number" name = "campground[cost]" placeholder = "cost" value = "<%= campground.cost %>" step = "0.01" min = "0" required>
                </div>                
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "campground[description]" placeholder = "description goes here ..." value = "<%= campground.description %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "campground[location]" placeholder = "location" value = "<%= campground.location %>">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<!-- add footer page -->
<% include ../partials/footer %>